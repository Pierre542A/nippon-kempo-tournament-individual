{
  "buildCommand": "cd front-quasar && npm run build",
  "outputDirectory": "front-quasar/dist/spa",
  "installCommand": "cd front-quasar && npm install && cd ../api-fastify && npm install",
  "functions": {
    "api-fastify/index.js": {
      "runtime": "nodejs18.x",
      "maxDuration": 30
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api-fastify/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/front-quasar/dist/spa/index.html"
    }
  ]
}